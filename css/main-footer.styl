.main-footer
  background: #272727
  color: rgba(255,255,255,0.5)
  font-size: 0.8em
  padding: 6.2em 3vw

  .main-footer-flex
    display: flex

  .main-logo
    font-weight: 700
    margin-right: 1.5em

    .zooniverse-logo
      font-size: 0.9em
      margin: 0 0.05em
      vertical-align: -0.07em

  .site-map
    flex-grow: 1

    .site-map-section
      display: inline-flex
      flex-direction: column
      margin: 0 4.5em

  a
    color: inherit
    text-decoration: none
