.main-footer
  background: #272727
  color: rgba(255,255,255,0.5)
  display: flex
  font-size: 10px
  justify-content: center
  line-height: 20px
  padding: 3em 3vw

  a
    color: inherit
    text-decoration: none

    &:hover
      color: rgba(255,255,255,0.75)

  .main-footer-flex
    display: flex
    flex-wrap: wrap
    justify-content: center
    max-width: 960px
    width: 100%

  .main-logo
    color: white
    font-weight: 700
    margin: 0 0 1.5em 0
    opacity: 0.5
    white-space: nowrap

    .main-logo-link
      color: white
      font-size: 18px
      opacity: 0.5

      &:hover
       opacity: 0.75

  .site-map
    flex-grow: 1

    .site-map-section
      display: inline-flex
      flex-direction: column
      flex-wrap: wrap
      font-size: 1.4em
      margin: 0 6.25vw 2.7em 0

      &:first-of-type
        margin-left: 6.25vw

      h6
        color: COPY
        font-size: 15px

  .social-media
    a
      font-size: 14px
      margin: 0.5em