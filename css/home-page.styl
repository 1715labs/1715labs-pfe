.home-page
  background: #f4f4f4

  .hero
    align-items: center
    background: url(./assets/zoohome-hero.jpg) top left no-repeat
    background-size: cover
    color: #f9f9f9
    display: flex
    flex-direction: column
    height: 95vh
    justify-content: center
    padding: 0 3vw
    text-align: center

    .hero-title
      color: inherit
      font-weight: 300
      letter-spacing: 0.09em
      line-height: 40px
      padding: 1.5em 0 0.5em

    .hero-tagline
      color: inherit
      font-size: 1.6em
      margin: 0 auto
      max-width: 600px
      padding: 1em 0 6.5em

    .hero-button
      color: #fbfbfb
      font-size: 1.6em
      font-weight: 400

      &:hover
        background: lighten(COBOLT_BLUE, 20%)

  .featured-projects
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center
    padding: 0 0 8em
    text-align: center

    .featured-projects-list
      column-width: 22em
      column-gap: 2.5em
      margin: 4.6em 3vw
      max-width: 960px
      width: 100%

  .about-zooniverse
    align-items: center
    display: flex
    flex-direction: column
    padding: 8em 0 0
    text-align: center

    .about-items-list
      max-width: 960px
      width: 100%

      .about-item
        display: flex
        flex-wrap: wrap
        justify-content: center
        padding: 7.5em 0
        position: relative

        &:first-of-type
          padding-top: 15em

        &:last-of-type
          padding-bottom: 15em

        .about-image
          width: 300px

        .about-item-content
          display: inline-flex
          flex-basis: 66%
          flex-direction: column
          justify-content: center
          margin: 2em auto
          text-align: left





