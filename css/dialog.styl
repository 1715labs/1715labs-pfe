.dialog-underlay
  background: rgba(black, 0.3)
  height: 100%
  left: 0
  position: fixed
  top: 0
  width: 100%

.dialog-content
  background: white
  box-shadow: 0 3px 5px -3px rgba(black, 0.5)
  left: 50%
  max-height: 90%
  padding: 2em 3vw
  position: absolute
  top: 40%
  transform: translate(-50%, -40%)
