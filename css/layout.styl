body
  display: flex
  flex-direction: column
  margin: 0
  min-height: 100vh

#panoptes-main,
.main-app
  display: flex
  flex: 1 0 auto
  flex-direction: column

.main-content
  flex: 1 0 auto

.normal-content
  padding: 3vh 5vw

.pill
  color: orangered
  border: 1px solid
  border-radius: 1em
  display: inline-block
  font: 400 10px Montserrat, sans-serif
  letter-spacing: 0.05em
  margin: 0 0.3em
  padding: 0 0.7em
  text-decoration: none
  text-transform: uppercase
  vertical-align: middle
