body
  display: flex
  flex-direction: column
  margin: 0
  min-height: 100vh

.main-container
  display: flex
  flex: 1
  flex-direction: column

.main-content
  flex: 1

.pill
  color: orangered
  border: 1px solid
  border-radius: 1em
  display: inline-block
  font: 400 10px Montserrat, sans-serif
  letter-spacing: 0.05em
  margin: 0 0.3em
  padding: 0 0.7em
  text-decoration: none
  text-transform: uppercase
  vertical-align: middle
