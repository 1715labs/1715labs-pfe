.tooltip
  .content
    background: BACKGROUND
    border: 2px solid MAIN_HIGHLIGHT
    border-radius: 0.3em
    box-shadow: 0 3px 2px -2px rgba(black, 0.3)
    color: FOREGROUND
    font-size: 0.8em
    padding: 0.5em 1vw

  .arrow
    background: MAIN_HIGHLIGHT
    height: 1em
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%) rotate(45deg)
    width: 1em
    z-index: -1

    .tether-element-attached-top &
      top: 0

    .tether-element-attached-right &
      left: 100%

    .tether-element-attached-bottom &
      top: 100%

    .tether-element-attached-left &
      left: 0
