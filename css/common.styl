FOREGROUND = #404040
BACKGROUND = white
MAIN_HIGHLIGHT = #43bbfd
SECOND_HIGHLIGHT = #38b978

background-stripes(color1, color2, size)
  background-image: repeating-linear-gradient(-45deg, color1, color1 size / 2, color2 size / 2, color2 size)

$reset-button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  display: inline-block
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  text-decoration: none

  &:disabled
    cursor: inherit
    opacity: 0.5

$text-input
  border: 1px solid gray
  box-shadow: 0 1px 3px rgba(black, 0.2) inset
  box-sizing: border-box
  font: inherit
  padding: 0.1em 0.5vw
