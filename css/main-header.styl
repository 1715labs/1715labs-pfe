.main-header

  .on-home-page &
    position: absolute
    width: 100%

    .main-nav-item:hover
      background: rgba(0,0,0,0.2)

    .account-bar .account-menu
      background: white
      color: COPY

      &:before
        border-color: #fff transparent

  a
    color: inherit
    text-decoration: none

  .on-project-page &
    opacity: 0.4
    transition: opacity 0.5s

    &:hover
      opacity: 1

  .account-bar
    position: relative

    .account-info
      padding-bottom: 1.75em

      .avatar
        height: calc(1em + 1.5vw)
        margin: -4em 1.75em -3.7em -0.3em
        vertical-align: middle
        width: calc(1em + 1.5vw)

      .display-name
        font-size: 14px
        margin-right: 1em

    .account-menu
      background: FOREGROUND
      border-radius: 4px
      color: white
      display: none
      flex-direction: column
      font-size: 14px
      margin: 0 1.75em
      padding: 1.5em
      position: absolute

      &:before
        border: solid
        border-color: FOREGROUND transparent
        border-width: 0 0.6em 0.6em 0.6em
        top: -0.55em
        content: ""
        display: block
        left: 5em
        position: absolute

    &:hover
      .account-menu
        display: flex

.main-title
  align-items: baseline
  background: MAIN_HIGHLIGHT
  border-bottom: 1px solid rgba(FOREGROUND, 0.3)
  box-sizing: border-box
  color: BACKGROUND
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  max-height: 60px
  padding: 1em 3vw

  .on-home-page &
    border-bottom: none

  .on-project-page &, .on-home-page &
    background: transparent

.main-logo
  font-family: "Montserrat"
  font-size: 1.9em
  font-smoothing: antialiased
  letter-spacing: 0.05em
  text-transform: uppercase

  svg
    vertical-align: -0.15em

.main-nav
  display: flex
  flex-grow: 1
  flex-wrap: wrap
  // border-bottom: 1px solid rgba(FOREGROUND, 0.3)

  > hr
    border: 0
    // border-right: 1px solid rgba(FOREGROUND, 0.3)
    flex: 1 1 auto
    margin: 0

.main-nav-item
  padding: 0.5em 3vw
  // border-right: 1px solid rgba(FOREGROUND, 0.3)
  box-shadow: 0 0 0 MAIN_HIGHLIGHT inset

  &:link:hover
    background: rgba(MAIN_HIGHLIGHT, 0.2)

  &.active
    box-shadow: 0 -3px 0 MAIN_HIGHLIGHT inset
    font-weight: bold

  a:hover
    border-bottom: 1px solid MAIN_HIGHLIGHT

  .minor
    font-size: 0.7em
    font-weight: bold
    letter-spacing: 0.1em
    text-transform: uppercase
