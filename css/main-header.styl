.main-header
  a
    color: inherit
    text-decoration: none

.main-title
  align-items: baseline
  background: MAIN_HIGHLIGHT
  border-bottom: 1px solid rgba(FOREGROUND, 0.3)
  color: BACKGROUND
  display: flex
  justify-content: space-between
  padding: 0.5em 3vw

  .pill
    background: BACKGROUND
    color: MAIN_HIGHLIGHT
    font-smoothing: auto

.main-logo
  font-family: "Montserrat"
  font-size: 1.3em
  font-smoothing: antialiased
  letter-spacing: 0.05em
  text-transform: uppercase

  svg
    vertical-align: -0.15em

.account-bar-avatar
  border-radius: 50%
  height: 3em
  margin: -1.5em 0
  position: relative
  width: 3em

.main-nav
  display: flex
  flex-wrap: wrap
  border-bottom: 1px solid rgba(FOREGROUND, 0.3)

  > hr
    border: 0
    border-right: 1px solid rgba(FOREGROUND, 0.3)
    flex: 1 1 auto
    margin: 0

.main-nav-item
  padding: 0.5em 3vw
  border-right: 1px solid rgba(FOREGROUND, 0.3)
  box-shadow: 0 0 0 MAIN_HIGHLIGHT inset

  &:link:hover
    background: lighten(MAIN_HIGHLIGHT, 90%)

  &.active
    box-shadow: 0 -3px 0 MAIN_HIGHLIGHT inset
    font-weight: bold

  a:hover
    border-bottom: 1px solid MAIN_HIGHLIGHT

  .minor
    font-size: 0.7em
    font-weight: bold
    letter-spacing: 0.1em
    text-transform: uppercase
