.team-page
  display: flex

  .side-bar
    border-right: solid 1px rgba(0,0,0,0.15)
    max-width: 190px
    width: 100%

    nav
      align-items: flex-start
      display: inline-flex
      flex-direction: column
      margin-top: 0.5em

      button
        color: #5a5a5a
        font-size: 0.9em
        margin-bottom: 1.5em
        outline: none

        &.active
          font-weight: 700

  .team-member-list
    .team-member
      display: flex
      margin: 1em

      img
        width: 150px

      .team-member-details
        flex-basis: 75%