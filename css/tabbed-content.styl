.tabbed-content-tabs
  text-align: center
  margin: 1em 3vw

.tabbed-content-tab
  @extends $reset-button
  font-size: 0.8em
  letter-spacing: 0.05em
  padding: 0.5em 3vw
  text-transform: uppercase

  &:hover
    box-shadow: 0 -1px 0 rgba(gray, 0.5) inset

  &.active
    box-shadow: 0 -3px 0 MAIN_HIGHLIGHT inset
    font-weight: bold
