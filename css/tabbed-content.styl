.tabbed-content
  display: flex

  &[data-side="top"]
    flex-direction: column

  &[data-side="left"]
    flex-direction: row

  &[data-side="right"]
    flex-direction: row-reverse

  > .tabbed-content-tabs
    flex: 0 0 auto

.tabbed-content-tabs
  display: flex

  .tabbed-content[data-side="top"] > &
    align-items: flex-end
    flex-direction: row
    flex-wrap: wrap

  .tabbed-content[data-side="left"] > &::after
    bottom: 0
    border-right-width: 1px
    right: 0
    top: 0

  .tabbed-content[data-side="right"] > &::after
    bottom: 0
    border-left-width: 1px
    left: 0
    top: 0

  .tabbed-content[data-side="left"] > &,
  .tabbed-content[data-side="right"] > &
    flex-direction: column
    padding: 0.5em 0
    position: relative

    &::after
      border-left: 1px solid
      bottom: 0
      content: ""
      opacity: 0.5
      position: absolute;
      top: 0

  .tabbed-content[data-side="left"] > &::after,
  [dir="rtl"] .tabbed-content[data-side="right"] > &::after
    right: 0

  .tabbed-content[data-side="right"] > &::after,
  [dir="rtl"] .tabbed-content[data-side="left"] > &::after
    left: 0

.tabbed-content-tab
  @extends $reset-button
  color: inherit
  cursor: pointer
  flex-shrink: 0
  padding: 0.4em 1em
  position: relative

  &.active
  &[data-active]
    background: MAIN_HIGHLIGHT
    color: white

    &::after
      border-color: transparent

  [data-side="top"] > .tabbed-content-tabs > &
    flex: 1 0 auto
    text-align: center

    // Add little ticks between tabs.
    &:not(:first-child)::before
      border-left: 1px solid
      bottom: 0
      content: ""
      height: 1em
      left: -1px
      opacity: 0.5
      position: absolute

    // Add a line underneath.
    &::after
      border-bottom-width: 1px
      border-bottom-style: solid
      content: ""
      left: 0
      opacity: 0.5
      position: absolute
      right: 0
      bottom: 0
