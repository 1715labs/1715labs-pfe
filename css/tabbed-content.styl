.tabbed-content
  display: flex

  &[data-side="top"]
    flex-direction: column

  &[data-side="bottom"]
    flex-direction: column-reverse

  &[data-side="left"]
    flex-direction: row

  &[data-side="right"]
    flex-direction: row-reverse

.tabbed-content-tabs
  display: flex
  flex-shrink: 0
  overflow: auto

.tabbed-content-tab
  cursor: pointer
  flex-shrink: 0
  padding: 0.4em 1em

.tabbed-content-tab.active
  background: orangered
  color: white

.tabbed-content-content
  flex: 1

.tabbed-content[data-side="top"] .tabbed-content-tabs,
.tabbed-content[data-side="bottom"] .tabbed-content-tabs
  flex-direction: row

.tabbed-content[data-side="left"] .tabbed-content-tabs,
.tabbed-content[data-side="right"] .tabbed-content-tabs
  flex-direction: column
  padding: 1vh 0

.tabbed-content-content
  border: 0 solid rgba(black, 0.2)
  flex: 1
  overflow: auto
  position: relative

.tabbed-content[data-side="top"] .tabbed-content-content
  border-top-width: 1px
  padding-top: 3vh

.tabbed-content[data-side="bottom"] .tabbed-content-content
  border-bottom-width: 1px
  padding-bottom: 3vh

.tabbed-content[data-side="left"] .tabbed-content-content
  border-left-width: 1px
  padding: 3vh 0 3vh 5vw

.tabbed-content[data-side="right"] .tabbed-content-content
  border-right-width: 1px
  padding: 3vh 5vw 3vh 0

.tabbed-content-content > *
  padding: 0
