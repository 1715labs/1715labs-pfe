.project-classify-page
  display: flex

  > .subject
    flex: 4

  > .task
    flex: 1

    .workflow-task-answer
      display: block

.subject-viewer-svg
  &[data-tool]
    cursor: crosshair

.drawing-tool
  fill: none
  stroke: none
  stroke-width: 0

  &[data-disabled]
    pointer-events: none

  &.point
    cursor: move
    cursor: grab
    cursor: -moz-grab
    cursor: -webkit-grab
    fill-opacity: 0.3
    stroke: currentColor
    stroke-width: 1.5

    &[data-disabled]
      opacity: 0.8

    &[data-selected]
      stroke-width: 3

    .dragging &
      cursor: grabbing
      cursor: -moz-grabbing
      cursor: -webkit-grabbing
