.classifier
  display: flex
  flex-wrap: wrap

  > .subject-area
    flex: 1 1 auto
    margin-bottom: 1em
    max-width: 100%
    text-align: center

  .subject-container
    color: gray

  .subject
    border: 1px solid rgba(gray, 0.5)
    border-radius: 5px
    max-height: 90vh
    max-width: 100%

  .marking-initializer
    cursor: crosshair

  .is-loading
    align-items: center
    background: rgba(gray, 0.5)
    color: white
    display: flex
    font-size: 2em
    height: 100%
    justify-content: center
    left: 0
    min-height: 4em
    position: absolute
    top: 0
    width: 100%

  .subject-frame-pip
    @extends $reset-button
    background: transparent
    border: 2px solid
    border-radius: 50%
    height: 0.7em
    margin: 0 0.3em
    overflow: hidden
    text-indent: 1em
    width: 0.7em

    &.active
      background: currentColor

  > .task-area
    display: flex
    flex: 3 1 20%
    flex-direction: column
    padding-left: 1vw

  .task-container
    border-bottom: 1px solid rgba(gray, 0.5)
    flex: 1 0 0
    margin-bottom: 0.5em
    overflow: auto

  .clickable
    @extends $minor-button

    &.active
      @extends $standard-button

    input
      margin-right: 0.5em

    .markdown
      display: inline-block

      p:first-child:last-child
        margin: 0

  .clickable,
  .clickable.active
    display: block
    margin: 0.5em 0
    text-align: left

  .drawing-tool-icon > svg
    fill-opacity: 0.1
    height: 1.5em
    stroke: currentColor
    stroke-width: 5

  .drawing-tool-input
    display: none

  .task-nav
    display: flex
    flex: 0 0 auto

    > :not(:first-child)
      margin-left: 2vw

    .talk
      @extends $standard-button
      flex: 2 0 auto

    .back
      @extends $minor-button
      flex: 1 0 auto

    .continue
      @extends $major-button
      flex: 7 0 auto
