.project-classify-page
  display: flex

  > .subject
    flex: 4

  > .task
    flex: 1

    .workflow-task-answer
      display: block

.subject-viewer-svg
  &[data-tool]
    cursor: crosshair

.drawing-tool
  fill: none
  stroke: none
  stroke-width: 0

.point-tool-disc
  fill: transparent
  stroke: currentColor
  stroke-width: 2
