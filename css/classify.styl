.project-classify-page
  display: flex

  > .subject
    flex: 4

  > .task
    flex: 1

    .workflow-task-answer
      display: block

.subject-viewer-svg
  &[data-tool]
    cursor: crosshair

.drawing-tool
  fill: none
  stroke: none
  stroke-width: 0

  &[data-disabled]
    pointer-events: none

  .clickable
    cursor: pointer
    display: none

  &[data-selected] .clickable
    display: initial

  .draggable
    cursor: move
    cursor: grab
    cursor: -webkit-grab

    .dragging &
      cursor: grabbing
      cursor: -webkit-grabbing

  &.point
    .main-disc
      fill-opacity: 0.3
      stroke: currentColor
      stroke-width: 1.5

    &[data-disabled] .main-disc
      opacity: 0.8

    &[data-selected] .main-disc
      stroke-width: 3
