.card-list
  column-count: 5
  column-gap: 1.66em
  column-width: 14.66em
  max-width: 1200px
  margin: 0 auto

.card
  background-position: 50% 0
  background-size: cover
  border-radius: 6px
  vendor("column-break-inside", avoid)
  display: block
  margin: 0 auto 1em
  max-height: 325px
  max-width: 220px
  overflow: hidden

  a
    text-decoration: none

  .details
    background: BACKGROUND
    box-sizing: border-box
    color: FOREGROUND
    display: flex
    flex-direction: column
    height: 175px
    padding: 20px
    text-align: left

  .name
    color: #8a8a8a
    font-size: 0.9em
    font-weight: 400

  .type, .owner
    color: #bababa
    flex-grow: 1
    font-size: .8em
    font-style: italic

  .card-button
    padding: .6em
    width: 180px
