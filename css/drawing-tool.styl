@keyframes guideline-marching-ants
  from
    stroke-dashoffset: 0
  to
    stroke-dashoffset: -5

.drawing-tool
  &[data-disabled]
    opacity: 0.5
    pointer-events: none

  .drawing-tool-main
    transform-origin: 50% 50%
    transition:
      opacity 0.4s,
      transform 0.4s

  &[data-destroying] .drawing-tool-main
    opacity: 0
    transform: scale(0.1)

  .clickable
    cursor: pointer

  &:not([data-selected]) .clickable
    display: none

  .draggable
    cursor: move
    cursor: grab
    cursor: -webkit-grab

    .dragging &
      cursor: grabbing
      cursor: -webkit-grabbing

  .drag-handle
    cursor: move
    transition: opacity 0.2s

    .dragging &
      cursor: none

  &:not([data-selected]):not(:hover) .drag-handle
    opacity: 0

  .guideline
    stroke-dasharray: 2 3

  &[data-selected] .guideline
    animation: guideline-marching-ants 0.5s linear infinite
