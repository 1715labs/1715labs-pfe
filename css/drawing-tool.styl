.drawing-tool
  &[data-disabled]
    opacity: 0.5
    pointer-events: none

  .drawing-tool-main
    transform-origin: 50% 50%
    transition:
      opacity 0.4s,
      transform 0.4s

  &[data-destroying] .drawing-tool-main
    opacity: 0
    transform: scale(0.1)

  .clickable
    cursor: pointer

  &:not([data-selected]) .clickable
    display: none

  .draggable
    cursor: move
    cursor: grab
    cursor: -webkit-grab

    .dragging &
      cursor: grabbing
      cursor: -webkit-grabbing

  .drag-handle
    cursor: move
    transition: opacity 0.2s

    .dragging &
      cursor: none

  &:not([data-selected]):not(:hover) .drag-handle
    opacity: 0
