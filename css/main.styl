@require "./common"
@require "./layout"
@require "./columns"
@require "./main-header"
@require "./main-footer"
@require "./project-card"
@require "./project"

html
  background: #fff
  color: #333
  font: 400 14px Montserrat, sans-serif

:unresolved
  visibility: hidden

h1,
h2
  font: italic 400 3em "Playfair Display", serif
  margin: 0 0 3vh
  padding: 0 0 1vh

h2
  font-size: 2em

hr
  border: 0 solid rgba(black, 0.2)
  border-top-width: 1px
  margin: 3vh 0

p.action
  text-align: center

table
  border-collapse: separate

  &.for-text-fields
    border-spacing: 3vw 1vh

  &.for-checkboxes
    border-spacing: 1vw 1vh

  &.standalone
    margin: 0 auto;

td
  vertical-align: baseline

fieldset
  border: 1px solid rgba(black, 0.2)
  border-width: 1px 0 0
  margin: 4vh 0
  padding: 2vh 0

legend
  font-size: 0.7em
  font-weight: 700
  margin: 0 auto
  opacity: 1
  padding: 0 1em
  text-transform: uppercase
  letter-spacing: 0.05em

a
  color: orangered

.jump-link
  color: white
  background: rgba(black, 0.8)
  left: 0
  padding: 0.2em 1.4em
  position: fixed
  text-decoration: none
  top: 10px
  transform: translateX(-100%)
  transition: transform 0.1s
  z-index: 1

  &:focus
    transform: translateX(0)

.badge
  background: orangered
  border-radius: 2em
  box-sizing: border-box
  color: white
  display: inline-block
  font-size: 0.8em
  height: 1.3em
  margin-left: 0.5em
  min-width: 1.3em
  padding: 0 0.5em
  line-height: 1.3
  text-align: center

  button
    @extends #_RESET_BUTTON

:root.signed-in .not-signed-in,
:root:not(.signed-in) .signed-in
  display: none
