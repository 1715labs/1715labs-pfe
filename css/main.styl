.panoptes-root {
  background: #ccc;
  color: black;
  font: 16px sans-serif;
}

h1 {
  font-weight: normal;
  font-size: 24px;
  margin: 0 0 0.25em;
  /*text-shadow: 0 1px rgba(0, 0, 0, 0.5);*/
}

.panoptes-grid {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.panoptes-grid > :not(:first-child) {
  margin-left: 1em;
}

.panoptes-minor-column {
  /*flex: 1;*/
}

.panoptes-major-column {
  /*flex: 1;*/
}

.panoptes-nav-menu {
  background: white;
  border: 1px solid;
  box-shadow: 2px 2px 0 -1px rgba(0, 0, 0, 0.5);
}

.panoptes-nav-menu ul {
  padding: 0;
  margin: 0;
}

.panoptes-nav-menu li {
  display: block;
}

.panoptes-nav-menu a {
  border-bottom: 1px solid;
  display: block;
  color: inherit;
  padding: 0.25em 1em;
  text-decoration: none;
}

.panoptes-nav-menu li:last-child a {
  border-bottom: none;
}

.panoptes-subpage {
  background: white;
  border: 1px solid;
  box-shadow: 2px 2px 0 -1px rgba(0, 0, 0, 0.5);
}

.panoptes-subpage:not(:target) {
  display: none;
}

.panoptes-subpage > .header {
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  font-weight: bold;
  padding: 1em;
}

.fieldset {
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  padding: 1em;
}

.fieldset:last-child {
  border-bottom: 0;
}

table {
  margin: 0;
  border-collapse: collapse;
  border-width: 0;
}
