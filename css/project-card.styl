.project-card-list
  display: flex
  flex-wrap: wrap

.project-card
  color: #333
  display: inline-flex
  flex: 0 1 30%
  font-size: 0.7rem
  line-height: 1.4
  margin: 0 2em 2em 0
  position: relative
  text-decoration: none

  .media
    margin-right: 1vw
    text-align: center

  .avatar
    border-radius: 0.3em
    display: block
    height: 6.7vw
    min-height: 5em
    min-width: 5em
    width: 6.7vw

  .details
    flex: 1

  .owner
    @extends h3

  .title
    @extends h2

  .description
    margin-top: 0.5em
