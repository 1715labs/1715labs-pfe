.project-card
  border: 1px solid transparent
  color: inherit
  display: flex
  font-size: 12px
  margin: 3vh 0
  text-decoration: none

  figure
    margin: 0 1vw 0 0
    text-align: center

  .avatar
    border-radius: 0.4em
    display: block
    flex: 0 0 auto
    height: 10vw
    width: 10vw

  .details
    flex: 1
    flex-direction: column

  .owner
    letter-spacing: 0.05em
    text-transform: uppercase

  .project
    font: italic 700 1.5em 'Playfair Display', serif
