.project-card
  color: #333
  display: flex
  font-size: 12px
  margin: 0 2vw 4vh 0
  // outline: 1px dashed gray
  text-decoration: none

  figure
    margin: 0 0.5em 0 0
    text-align: center

  .avatar
    border-radius: 0.3em
    display: block
    flex: 1 0 auto
    height: 6.7vw
    min-height: 5em
    min-width: 5em
    width: 6.7vw

  .details
    flex: 1
    flex-direction: column

  .owner
    letter-spacing: 0.05em
    text-transform: uppercase

  .title
    font: italic 700 1.5em 'Playfair Display', serif
