.grid-button-tab
  @extends $reset-button
  border: 2px solid transparent
  font-size: 0.9em
  margin: 0.3vw
  padding: 0.8em 1.2vw

  &.active
    border: 2px solid MAIN_HIGHLIGHT
    border-radius: .5em
    font-weight: bold

.grid-button-template
  cursor: pointer
  margin: 0.5vw
  padding:5px

.grid-button-table
  margin-left: 2em
  margin-top: 2em
  text-align: center

.template-select
  margin-left: 4em

  .template-name-input
    border: 1px solid #cccccc
    border-radius: 4px
    padding: 0.6em 0.8em
    width: 60%

  .grid-selection-dropdown
    @extends .standard-input
    border: 1px solid #cccccc
    border-radius: 4px
    font-size: 0.9
    margin-bottom: 1em
    width: 40%

    .grid-dropdown-options
      color: yellow
      background-color: blue

  .template-form-button
    @extends $reset-button
    background-color: black
    border-radius: 0.5em
    display: inline-block
    font-size: 0.9em
    margin: 0em 0.2vw
    padding: 0 0.8em 0 0.5em
    vertical-align: middle

  .create-grid
    background-color: MAIN_HIGHLIGHT
