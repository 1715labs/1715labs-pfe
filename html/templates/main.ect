<!DOCTYPE html>

<html class="signed-in">
  <head>
    <meta charset="utf-8" />
    <title><% content 'page-title' %></title>
    <script src="/bower_components/platform/platform.js"></script>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Montserrat:400,700" />
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Playfair+Display:400italic,700italic" />
  </head>

  <body>
    <a href="#start-of-content" class="jump-link">Jump to content</a>

    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <symbol id="the-zooniverse-logo" viewBox="0 0 100 100">
        <g fill="currentColor" stroke="transparent" stroke-width="0">
          <path transform="translate(50, 50) rotate(45)" d="
            M 0 -45 A 45 45 0 0 1 0 45 A 45 45 0 0 1 0 -45 Z
            M 0 -30 A 30 30 0 0 0 0 30 A 30 30 0 0 0 0 -30 Z
            M 0 -14 A 14 14 0 0 1 0 14 A 14 14 0 0 1 0 -14 Z
            M 0 -70 L 8 0 L 0 70 L -8 0 Z
          "></path>
        </g>
      </symbol>
    </svg>

    <!--TODO: This is an awful way to get the right path.-->
    <% path = require 'path' %>
    <% include path.resolve 'html/partials/account-dialog' %>

    <div class="main-container" id="start-of-content">
      <header class="main-header">
        <a href="/" class="logo main-option">Ã˜ Zooniverse</a>
        <a href="/projects" class="main-option">Projects</a>
        <a href="/discuss" class="main-option">
          Discussion
          <span class="badge" title="Unread comments">5</span>
        </a>
        <a href="/about" class="main-option">About</a>
        <a href="/blog" class="main-option">Blog</a>

        <hr class="not-signed-in" />

        <a href="#" class="not-signed-in">Register</a>
        <a href="#" class="not-signed-in">Sign in</a>

        <hr class="signed-in" />

        <div id="user-option" class="signed-in main-option">
          <a href="/edit/account">brian-c</a>
          <span class="badge"><button type="button">Zooniverse</button></span>
          <a href="/people/#/brian-c" onclick="document.documentElement.classList.toggle('signed-in'); return false;">
            <img src="https://pbs.twimg.com/profile_images/437294429955563520/MM1_4w75.jpeg" class="avatar" />
          </a>
        </div>
      </header>

      <div class="main-content">
        <% content %>
      </div>
    </div>

    <footer class="main-footer">
      <a href="/contact">Contact us</a>
      <a href="/privacy">Privacy policy</a>
    </footer>

    <script src="/js/main.js"></script>
  </body>
</html>
