{
  "name": "panoptes-front-end",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "emojify.js": "^0.9.5",
    "es6-promise": "^2.0.0",
    "function-bind": "^1.0.2",
    "json-api-client": "~0.0.8",
    "lodash.merge": "^2.4.1",
    "marked": "^0.3.2",
    "react": "^0.12.0",
    "react-translator": "~0.0.4",
    "route-parser": "^0.0.2",
    "nib": "^1.0.4",
    "stylus": "^0.49.2"
  },
  "devDependencies": {
    "blue-tape": "^0.1.7",
    "browser-sync": "^1.5.7",
    "cjsx-loader": "^1.0.0",
    "coffee-loader": "^0.7.2",
    "csso": "^1.3.11",
    "publisssh": "^0.2.5",
    "tap-spec": "^1.0.0",
    "testling": "^1.7.1",
    "webpack": "^1.4.12"
  },
  "scripts": {
    "build": "NODE_ENV=production ./bin/build.sh",
    "postinstall": "npm run get-fallback-polyfills",
    "get-fallback-polyfills": "curl \"https://cdn.polyfill.io/v1/polyfill.min.js?features=default,es6&flags=gated&ua=(MSIE%206.0)\" > ./public/fallback-polyfills.js",
    "stage": "npm run build && publisssh ./build demo.zooniverse.org/panoptes-front-end",
    "start": "./bin/serve.sh",
    "test": "mkdir -p ./tmp; webpack --config webpack.test.config.js; cat ./tmp/test.js | testling | tap-spec; rm -rf ./tmp",
    "test-mac": "mkdir -p ./tmp; webpack --config webpack.test.config.js; cat ./tmp/test.js | testling -x \"open\" | tap-spec; rm -rf ./tmp"
  }
}
